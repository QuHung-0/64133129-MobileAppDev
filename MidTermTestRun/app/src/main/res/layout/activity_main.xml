<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/main"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MainActivity"
	tools:layout_editor_absoluteX="-28dp"
	tools:layout_editor_absoluteY="0dp">

	<Button
		android:id="@+id/buttonIBM"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="45dp"
		android:layout_marginTop="63dp"
		android:onClick="IntentBMI"
		android:text="BMI"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/buttonListView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="63dp"
		android:layout_marginEnd="52dp"
		android:onClick="IntentProfile"
		android:text="Profile"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<Button
		android:id="@+id/buttonProfile"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="45dp"
		android:layout_marginBottom="510dp"
		android:onClick="IntentListView"
		android:text="List view"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent" />



	<Button
		android:id="@+id/buttonRecyclerView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="52dp"
		android:layout_marginBottom="510dp"
		android:onClick="IntentRecyclerView"
		android:text="Recycler view"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>